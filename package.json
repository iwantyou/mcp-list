  "scripts": {
    "test": "vitest",
    "build": "pnpm -r build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "if ! command -v zmc > /dev/null 2>&1;then pnpm run build:zmc && pnpm run link:zmc;fi",
    "dev:zmc": "tsc -b tsconfig.build.json -w",
