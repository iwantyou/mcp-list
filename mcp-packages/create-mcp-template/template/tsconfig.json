{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",
    "noImplicitAny": false,
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "strict": true,
    "module": "NodeNext",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "./global.d.ts"],
  "exclude": ["node_modules", "dist"]
}
